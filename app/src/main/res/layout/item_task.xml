<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_8">

    <RelativeLayout
        android:id="@+id/llItemTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dimen_8"
        android:paddingVertical="@dimen/dimen_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/chkIsDone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:buttonTint="@color/black" />

        <TextView
            android:id="@+id/tvTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dimen_8"
            android:layout_toEndOf="@id/chkIsDone"
            android:text="Hoan thanh giao dien"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text_17" />

        <ImageView
            android:id="@+id/imgUp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_keyboard_arrow_up_24" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llDes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/llItemTask">

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="46dp"
            android:drawablePadding="@dimen/dimen_8"
            android:gravity="center_vertical"
            android:text="@string/des"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text_14"
            app:drawableStartCompat="@drawable/ic_baseline_description_24" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="46dp"
            android:layout_marginTop="@dimen/dimen_4"
            android:background="@color/bubbleLight" />

        <TextView
            android:id="@+id/tvDuedate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="46dp"
            android:layout_marginTop="@dimen/dimen_4"
            android:drawablePadding="@dimen/dimen_8"
            android:gravity="center_vertical"
            android:text="@string/duedate"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text_14"
            app:drawableStartCompat="@drawable/ic_baseline_timer_off_24" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="46dp"
            android:layout_marginTop="@dimen/dimen_4"
            android:background="@color/bubbleLight" />

        <TextView
            android:id="@+id/tvPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="46dp"
            android:layout_marginTop="@dimen/dimen_4"
            android:drawablePadding="@dimen/dimen_8"
            android:gravity="center_vertical"
            android:text="@string/point"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text_14"
            app:drawableStartCompat="@drawable/ic_baseline_score_24" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="46dp"
            android:layout_marginTop="@dimen/dimen_4"
            android:background="@color/bubbleLight" />

        <TextView
            android:id="@+id/tvPeople"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="46dp"
            android:layout_marginTop="@dimen/dimen_4"
            android:drawablePadding="@dimen/dimen_8"
            android:gravity="center_vertical"
            android:text="@string/team"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text_14"
            app:drawableLeftCompat="@drawable/ic_baseline_people_alt_24" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="46dp"
            android:layout_marginTop="@dimen/dimen_4"
            android:background="@color/bubbleLight" />

        <TextView
            android:id="@+id/tvFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="46dp"
            android:layout_marginTop="@dimen/dimen_4"
            android:drawablePadding="@dimen/dimen_8"
            android:text="@string/feedback"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text_14"
            app:drawableLeftCompat="@drawable/ic_baseline_feedback_24" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dimen_8"
        android:background="@color/bubbleLight"
        app:layout_constraintTop_toBottomOf="@+id/llDes" />

</androidx.constraintlayout.widget.ConstraintLayout>