            <!--                    android:text="@string/attachment"-->
            <!--                    android:textColor="@color/textPrimary"-->
            <!--                    android:textSize="@dimen/text_14"-->
            <!--                    android:textStyle="bold" />-->
            <!--            </LinearLayout>-->

            <!--            <androidx.recyclerview.widget.RecyclerView-->
            <!--                android:id="@+id/recyclerViewAttach"-->
